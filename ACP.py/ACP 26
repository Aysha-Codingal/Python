import math

class Circle:
    def __init__(self, radius):
        self.radius = radius
        
    def area(self):
        return math.pi * (self.radius ** 2)
        
    def perimeter(self):
        return 2 * math.pi * self.radius

radius_value = 7
my_circle = Circle(radius_value)

print(f"Radius of the circle is:{radius_value}")
print(f"Area of the circle is: {my_circle.area()}")
print(f"Perimeter of the circle is: {my_circle.perimeter()}")